# Bitrix24 MCP Server environment template
# Copy this file to .env and replace placeholder values as needed

# === Bitrix24 Authentication (choose ONE approach) ===
# Recommended simple option: incoming webhook URL
BITRIX24_WEBHOOK_URL=https://your-portal.bitrix24.ru/rest/1/your_webhook_key/

# Alternative production option: OAuth access token + portal base URL
# BITRIX24_ACCESS_TOKEN=your_access_token_here
# BITRIX24_PORTAL_URL=https://your-portal.bitrix24.ru

# === Bitrix24 Client Tuning (optional) ===
BITRIX24_REQUESTS_PER_SECOND=2
BITRIX24_REQUEST_POOL_SIZE=50
BITRIX24_RESPECT_VELOCITY_POLICY=true
BITRIX24_SSL_VERIFY=true

# === MCP Server Metadata (optional) ===
MCP_SERVER_NAME=bitrix24-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=Model Context Protocol server for Bitrix24 integration
MCP_TRANSPORT=stdio
MCP_PORT=8000
MCP_HOST=localhost
MCP_LOG_LEVEL=INFO
