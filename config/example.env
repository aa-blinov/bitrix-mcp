# Bitrix24 Configuration Example
# Copy this file to .env and fill in your actual values

# Bitrix24 Authentication - Choose ONE of the following methods:

# Method 1: Webhook URL (recommended for simplicity)
BITRIX24_WEBHOOK_URL=https://your-portal.bitrix24.com/rest/1/your_webhook_key/

# Method 2: OAuth Token (recommended for production)
# BITRIX24_ACCESS_TOKEN=your_access_token_here
# BITRIX24_PORTAL_URL=https://your-portal.bitrix24.com

# Performance Settings (optional)
BITRIX24_REQUESTS_PER_SECOND=2
BITRIX24_REQUEST_POOL_SIZE=50
BITRIX24_RESPECT_VELOCITY_POLICY=true
BITRIX24_SSL_VERIFY=true

# MCP Server Configuration (optional)
MCP_SERVER_NAME=bitrix24-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=Model Context Protocol server for Bitrix24 integration
MCP_TRANSPORT=stdio
MCP_PORT=8000
MCP_HOST=localhost
MCP_LOG_LEVEL=INFO